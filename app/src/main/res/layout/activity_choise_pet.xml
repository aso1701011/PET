<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ChoisePetActivity">

    <ImageButton
            android:layout_width="0dp"
            android:layout_height="0dp" tools:srcCompat="@tools:sample/avatars"
            android:id="@+id/choise_2"
            app:layout_constraintStart_toEndOf="@+id/choise_1" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/choise_1" app:layout_constraintBottom_toBottomOf="@+id/choise_1"
            android:layout_marginEnd="95dp" android:layout_marginRight="95dp"/>
    <ImageButton
            android:layout_width="0dp"
            android:layout_height="0dp" tools:srcCompat="@tools:sample/avatars"
            android:id="@+id/choise_1"
            app:layout_constraintTop_toBottomOf="@+id/choise_title_text"
            app:layout_constraintEnd_toStartOf="@+id/choise_2" android:layout_marginBottom="12dp"
            app:layout_constraintBottom_toTopOf="@+id/choise_3" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="96dp" android:layout_marginStart="96dp" android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"/>
    <TextView
            android:text="ペットショップ"
            android:layout_width="168dp"
            android:layout_height="0dp"
            android:id="@+id/choise_title_text" android:layout_marginTop="40dp"
            android:layout_marginBottom="52dp" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/choise_1" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>
    <Button
            android:text="Button"
            android:layout_width="205dp"
            android:layout_height="0dp"
            android:id="@+id/choise_decide_button"
            app:layout_constraintTop_toBottomOf="@+id/choise_name_text" android:layout_marginBottom="139dp"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>
    <ImageButton
            android:layout_width="0dp"
            android:layout_height="0dp" tools:srcCompat="@tools:sample/avatars"
            android:id="@+id/choise_3"
            app:layout_constraintTop_toBottomOf="@+id/choise_1" app:layout_constraintEnd_toStartOf="@+id/choise_4"
            android:layout_marginBottom="90dp" app:layout_constraintBottom_toTopOf="@+id/choise_name_text"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="96dp"
            android:layout_marginStart="96dp" android:layout_marginEnd="8dp" android:layout_marginRight="8dp"/>
    <ImageButton
            android:layout_width="0dp"
            android:layout_height="0dp" tools:srcCompat="@tools:sample/avatars"
            android:id="@+id/choise_4"
            app:layout_constraintStart_toEndOf="@+id/choise_3" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/choise_3" app:layout_constraintBottom_toBottomOf="@+id/choise_3"
            android:layout_marginEnd="95dp" android:layout_marginRight="95dp"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:text="Name"
            android:ems="10"
            android:id="@+id/choise_name_text"
            app:layout_constraintStart_toStartOf="@+id/choise_decide_button"
            app:layout_constraintTop_toBottomOf="@+id/choise_3" android:layout_marginBottom="53dp"
            app:layout_constraintBottom_toTopOf="@+id/choise_decide_button"/>
</android.support.constraint.ConstraintLayout>